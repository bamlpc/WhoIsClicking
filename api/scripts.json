{
  "$schema": "https://deno.land/x/denon@2.5.0/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run --lock=lock.json mod.ts",
      "desc": "run my mod.ts file",
      "importMap": "import_map.json",
      "allow": [
        "net"
      ]
    }
  },

  "watcher": {
    "exts": [
      "js", "jsx", "ts", "tsx", "json"
    ],
    "match": [
      "**/*.*"
    ],
    "paths":[
      "./mod.ts"
    ],
    "skip": [
      "*/.git/*", "Dockerfile"
    ]
  },

  "logger": {
    "fullscreen": true
  }
}